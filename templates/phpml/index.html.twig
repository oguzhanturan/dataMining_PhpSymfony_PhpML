{% extends 'base.html.twig' %}

{% block title %}Anasayfa{% endblock %}
{% block stylesheets %}
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 100%;
            border-radius: 5px;
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

        img {
            border-radius: 5px 5px 0 0;
        }

        .container {
            padding: 2px 16px;
        }
    </style>{% endblock %}

{% block body %}
    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li><a href="#">Anasayfa</a></li>
                        <li><a href="#">Harita</a></li>
                        <li class="active">Sokak Haritası</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <hr>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">

                    <div class="card-header"><h2> Çağrı Bilgileri</h2></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3" style="margin: 10px;">
                                {% if(dataform["sheet"]["cinsiyet"] =='1') %}
                                    <img src="{{ asset('assets') }}/img_avatar2.png" alt="Avatar" style="width:100%">
                                {% else %}
                                    <img src="{{ asset('assets') }}/img_avatar.png" alt="Avatar" style="width:100%">
                                {% endif %}
                            </div>
                            <div class="col-md-5">
                                <strong>Kayit Tarihi</strong><h4><b>{{ dataform["sheet"]["kayittarihi"] }}</b>
                                </h4>
                                <strong>Telefon</strong> <h4><b>{{ dataform["sheet"]["tel"] }}</b></h4>
                                <strong>Cağrı Yapan</strong><h4><b>{{ dataform["sheet"]["cagriyapan"] }}</b></h4>
                                <strong>Çağrı Yolu</strong><h4><b>{{ dataform["sheet"]["cagriyolu"] }}</b></h4>
                                <strong>Çağrı Nedeni</strong><h4><b>{{ dataform["sheet"]["cagrinedeni"] }}</b></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">

                <div class="card">
                    <div class="card-header"><h2> Adres Bilgileri</h2></div>
                    <div class="card-body">
                        <strong>Sokak</strong><h4><b>{{ dataform["sheet"]["sokak"] }}</b></h4>
                        <strong>Mahalle</strong><h4><b>{{ dataform["sheet"]["mahalle"] }}</b></h4>
                        <strong>İlçe</strong><h4><b>{{ dataform["sheet"]["ilce"] }}</b></h4>
                        <strong>Cinsiyet</strong><h4><b>{{ dataform["sheet"]["cinsiyet"] }}</b></h4>
                        <strong>Yas</strong><h4><b>{{ dataform["sheet"]["yas"] }}</b></h4>
                    </div>
                </div>
            </div>
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header"><h2> Sistem Yorumları</h2></div>
                    <div class="card-body">

                        <!--========== First Modal ==========-->
                        <article class="col-md-3 well">
                            <h3 class="page-header text-center">Ambulans <br/>
                                <small>Vakaya Ambulans Ekibi Gönderilecek mi?</small>
                            </h3>
                            <br>
                            <hr>
                            <div class="text-center">
                                {% if predict==0 %}
                                    <a class="btn btn-warning" href="#" data-toggle="modal"><i
                                                class="fa fa-ambulance"></i> Gitmemeli</a>
                                {% else %}
                                    <a class="btn btn-success" href="#" data-toggle="modal"><i
                                                class="fa fa-ambulance"></i> Gitmeli</a>
                                {% endif %}
                            </div>

                        </article>

                        <!--========== Second Modal ==========-->
                        <article class="col-md-3 well">
                            <h3 class="page-header text-center">Polis Ekibi<br/>
                                <small>Ekip ile Birlikte Polis Ekibi Gidecek mi</small>
                            </h3>
                            <br>
                            <hr>
                            <div class="text-center">
                                {% if predict2==0 %}
                                    <a class="btn btn-warning" href="#" data-toggle="modal"><i class="fa fa-taxi"></i>
                                        Gitmemeli</a>
                                {% else %}
                                    <a class="btn btn-primary" href="#" data-toggle="modal"><i class="fa fa-taxi"></i>
                                        Gitmeli</a>
                                {% endif %}
                            </div>

                        </article>

                        <!--========== Third Modal ==========-->
                        <article class="col-md-3 well">
                            <h3 class="page-header text-center">Ek Hasta<br/>
                                <small>Trafik Kazasımı, Birden Fazla Ekip Gerekli mi ?</small>
                            </h3>
                            <br>
                            <hr>
                            <div class="text-center">
                                {% if predict3==0 %}
                                    <a class="btn btn-warning" href="" data-toggle="modal"><i
                                                class="fa fa-plus"></i> Ek Hasta Yoktur</a>
                                {% else %}
                                    <a class="btn btn-info" href="" data-toggle="modal"><i class="fas fa-car-crash"></i>
                                        Ek Hasta Olabilir </a>
                                {% endif %}
                            </div>

                        </article>

                        <article class="col-md-3 well">
                            <h3 class="page-header text-center">Hasta Önceliği<br/>
                                <small>Öncelik Gerektiren Hasta Olabilirmi ?</small>
                            </h3>
                            <br>
                            <hr>
                            <div class="text-center">
                                {% if predict4==0 %}
                                    <a class="btn btn-warning" href="" data-toggle="modal"><i
                                                class="fa fa-plus-square"></i> Hasta Önceliği Yoktur</a>
                                {% else %}
                                    <a class="btn btn-info" href="" data-toggle="modal"><i class="fas fa-car-crash"></i>
                                        Hasta Önceliği Olabilir </a>
                                {% endif %}
                            </div>

                        </article>

                        <strong>Gönderilecek Ekip Hangisi ?</strong><br>
                    </div>
                </div>
            </div>
        </div>

        <a href="{{ path('sheet_edit', {'id': id}) }}">
            <button type="button" class="btn btn-primary btn-lg btn-block">Hasta Detayları</button>
        </a>
    </div>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->





    <link rel="stylesheet" type="text/css" href="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css"/>
    <link rel="stylesheet" type="text/css"
          href="http://cdnjs.cloudflare.com/ajax/libs/leaflet.markercluster/0.4.0/MarkerCluster.css"/>
    <link rel="stylesheet" type="text/css"
          href="http://cdnjs.cloudflare.com/ajax/libs/leaflet.markercluster/0.4.0/MarkerCluster.Default.css"/>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

    <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js'></script>
    <script type='text/javascript' src='http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js'></script>
    <script type='text/javascript'
            src='http://cdnjs.cloudflare.com/ajax/libs/leaflet.markercluster/0.4.0/leaflet.markercluster.js'></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type='text/javascript' src='{{ asset('assets') }}/maps/markers.js'></script>
    <script type='text/javascript' src='{{ asset('assets') }}/maps/leaf-demo.js'></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>


{% endblock %}
