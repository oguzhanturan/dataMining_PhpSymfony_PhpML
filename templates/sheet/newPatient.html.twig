                                    <label for="permanent_address" class="col-md-4 col-form-label text-md-right">Ek Hasta</label>
                                    <div class="col-md-6">
                                        <div class="input-group">
                                            <span class="input-group-addon" style="max-width: 100%;"><i class="glyphicon glyphicon-user"></i></span>
                                            <select class="selectpicker form-control" style="height: 35px;" id="kentselkirsal" name="sheet[ekhasta]" >
                                                <option  value="{{ sheet.ekhasta }}"> {{ sheet.ekhasta }}</option>
                                                <option value="1">Checked -1 </option>
